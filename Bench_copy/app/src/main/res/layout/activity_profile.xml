<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <ImageButton
        android:id="@+id/addButtonProfile"
        android:layout_width="0dp"
        android:layout_height="101dp"
        android:layout_marginEnd="1dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#D3D3D3"
        android:padding="20dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/matchesButtonProfile"
        app:layout_constraintEnd_toStartOf="@+id/matchesButtonProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/matchesButtonProfile"
        app:srcCompat="@drawable/add" />

    <ImageButton
        android:id="@+id/matchesButtonProfile"
        android:layout_width="0dp"
        android:layout_height="101dp"
        android:layout_marginEnd="132dp"
        android:adjustViewBounds="true"
        android:background="#FFFFFF"
        android:backgroundTint="#D1D1D1"
        android:padding="20dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addButtonProfile"
        app:srcCompat="@drawable/football" />

    <ImageButton
        android:id="@+id/profileButtonProfile"
        android:layout_width="133dp"
        android:layout_height="101dp"
        android:adjustViewBounds="true"
        android:backgroundTint="@color/cem"
        android:padding="20dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/matchesButtonProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/matchesButtonProfile"
        app:layout_constraintTop_toTopOf="@+id/matchesButtonProfile"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/userInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:text="User Info"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/usernameInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginTop="124dp"
        android:text="Username:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/jmInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Joined Matches:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/usernameInfo"
        app:layout_constraintTop_toBottomOf="@+id/usernameInfo" />

    <TextView
        android:id="@+id/userUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:text="example.user"
        app:layout_constraintBottom_toBottomOf="@+id/usernameInfo"
        app:layout_constraintStart_toStartOf="@+id/userInfo"
        app:layout_constraintTop_toTopOf="@+id/usernameInfo" />

    <ListView
        android:layout_width="278dp"
        android:layout_height="0dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@+id/addButtonProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/jmInfo" />
</androidx.constraintlayout.widget.ConstraintLayout>